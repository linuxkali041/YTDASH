# Application Settings
APP_NAME=YouTube Video Downloader
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ============================================
# Security Settings
# ============================================

# Cookie Encryption Key (Required for authenticated downloads)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
COOKIE_ENCRYPTION_KEY=

# JWT Secret Key (Required for user authentication)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production


# ============================================
# Database Settings
# ============================================

# Database URL (SQLite by default, PostgreSQL for production)
# SQLite: sqlite:///./youtube_downloader.db
# PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./youtube_downloader.db


# ============================================
# OAuth Configuration (Optional)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/callback
OAUTH_SCOPES="openid,https://www.googleapis.com/auth/youtube.readonly"

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Download Settings
DOWNLOAD_OUTPUT_DIR=downloads
DOWNLOAD_TEMP_DIR=temp
MAX_CONCURRENT_DOWNLOADS_PER_USER=3
MAX_DOWNLOAD_SIZE_MB=2048
DOWNLOAD_TIMEOUT_SECONDS=3600

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Session Settings
SESSION_TIMEOUT_HOURS=24
COOKIE_REFRESH_THRESHOLD_HOURS=6
